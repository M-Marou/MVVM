<UserControl x:Class="DGV.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DGV.Views"
             mc:Ignorable="d" Background= "LightGreen"
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <DataGrid x:Name="myDG" HorizontalAlignment="Left" Height="278" Margin="56,98,0,0" VerticalAlignment="Top" Width="486">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Employee ID" Width="*"/>
                <DataGridTextColumn Header="Employee Name" Width="*"/>
                <DataGridTextColumn Header="Employee Address" Width="*"/>
                <DataGridTextColumn Header="Employee City" Width="*"/>
                <DataGridTextColumn Header="Employee State" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
